<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BeautyDiary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimaryVariant</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="buttonBarPositiveButtonStyle">@style/MaterialCalendarButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialCalendarButtonStyle</item>
    </style>

    <style name="MaterialCalendarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="textAppearanceError" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorError</item>
        <item name="drawableTint">@color/colorError</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/color_outline_button</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_outline_button</item>
        <item name="iconTint">@color/color_outline_button</item>
    </style>

    <style name="BaseImageButton" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
</resources>